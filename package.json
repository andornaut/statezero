{
  "name": "statezero",
  "version": "0.7.2",
  "author": "andornaut",
  "description": "Small, simple, functional JavaScript library for managing immutable state",
  "keywords": [
    "functional",
    "immutable",
    "state"
  ],
  "license": "MIT",
  "main": "dist/statezero.js",
  "module": "dist/statezero.esm.js",
  "exports": {
    ".": {
      "import": "./dist/statezero.esm.js",
      "require": "./dist/statezero.js"
    }
  },
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/andornaut/statezero/issues"
  },
  "homepage": "https://github.com/andornaut/statezero#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/andornaut/statezero.git"
  },
  "dependencies": {
    "deep-diff": "^1.0.2",
    "lodash": "^4.17.21",
    "simple-deep-freeze": "^0.0.2"
  },
  "devDependencies": {
    "@babel/core": "~7.24.9",
    "@babel/preset-env": "~7.24.8",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "husky": "~7.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "~15.2.7",
    "prettier-eslint": "~16.3.0",
    "prettier-eslint-cli": "~8.0.1"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:umd",
    "build:esm": "esbuild src/index.js --bundle --format=esm --outfile=dist/statezero.esm.js",
    "build:production": "npm run build:esm -- --minify && npm run build:umd -- --minify",
    "build:umd": "esbuild src/index.js --bundle --format=iife --global-name=statezero --outfile=dist/statezero.js",
    "format": "prettier-eslint --write \"${PWD}/{src/**,/test/**/,./}*.{css,js,json,jsx,md}\"",
    "lint": "eslint --max-warnings 0 {src,test}/**/*.js",
    "prepare": "husky install",
    "prepublishOnly": "npm run test && npm run build:production",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
