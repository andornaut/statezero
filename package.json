{
  "name": "statezero",
  "version": "0.7.2",
  "author": "andornaut",
  "description": "Small, simple, functional JavaScript library for managing immutable state",
  "keywords": [
    "functional",
    "immutable",
    "reactive",
    "state",
    "state-management",
    "store"
  ],
  "license": "MIT",
  "main": "dist/statezero.js",
  "module": "dist/statezero.esm.js",
  "exports": {
    ".": {
      "import": "./dist/statezero.esm.js",
      "require": "./dist/statezero.js"
    },
    "./src": {
      "import": "./src/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": "andornaut/statezero",
  "homepage": "https://github.com/andornaut/statezero#readme",
  "bugs": "https://github.com/andornaut/statezero/issues",
  "dependencies": {
    "deep-diff": "^1.0.2",
    "lodash": "^4.17.23",
    "simple-deep-freeze": "^0.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^3.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "lint-staged": "^16.2.7",
    "prettier-eslint-cli": "^8.0.1"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:umd",
    "build:esm": "esbuild src/index.js --bundle --format=esm --packages=external --outfile=dist/statezero.esm.js",
    "build:production": "npm run build:esm -- --minify && npm run build:umd -- --minify",
    "build:umd": "esbuild src/index.js --bundle --format=iife --global-name=statezero --outfile=dist/statezero.js",
    "format": "prettier-eslint --write \"${PWD}/{src/**,/test/**/,./}*.{css,js,json,jsx,md}\"",
    "lint": "eslint --max-warnings 0 {src,test}/**/*.js",
    "prepare": "husky",
    "prepublishOnly": "npm run test && npm run build:production",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
